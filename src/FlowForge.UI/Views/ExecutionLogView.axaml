<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FlowForge.UI.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="120"
             x:Class="FlowForge.UI.Views.ExecutionLogView"
             x:DataType="vm:ExecutionLogViewModel">

    <DockPanel>
        <!-- Summary bar -->
        <Border DockPanel.Dock="Top"
                Padding="8,4"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,*,Auto">
                <!-- Status counts -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <TextBlock>
                        <Run Text="OK: " />
                        <Run Text="{Binding Succeeded}" Foreground="Green" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Fail: " />
                        <Run Text="{Binding Failed}" Foreground="Red" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Skip: " />
                        <Run Text="{Binding Skipped}" Foreground="Orange" />
                    </TextBlock>
                </StackPanel>

                <!-- Progress bar -->
                <ProgressBar Grid.Column="1"
                             Value="{Binding Progress}"
                             Minimum="0"
                             Maximum="100"
                             Width="120"
                             Height="12"
                             Margin="12,0"
                             VerticalAlignment="Center"
                             IsVisible="{Binding IsRunning}" />

                <!-- Current file -->
                <TextBlock Grid.Column="2"
                           Text="{Binding CurrentFile}"
                           MaxWidth="300"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center"
                           Opacity="0.7"
                           IsVisible="{Binding IsRunning}" />

                <!-- Summary -->
                <TextBlock Grid.Column="4"
                           Text="{Binding Summary}"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center"
                           Margin="8,0"
                           IsVisible="{Binding !IsRunning}" />
            </Grid>
        </Border>

        <!-- Log entries in expander -->
        <Expander Header="Log Entries"
                  Padding="0"
                  IsExpanded="False">
            <ScrollViewer MaxHeight="200">
                <ItemsControl ItemsSource="{Binding Entries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:FileJobLogEntryViewModel">
                            <Border Padding="8,2"
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                    BorderThickness="0,0,0,1">
                                <Border.Styles>
                                    <Style Selector="Border > Grid > TextBlock.statusBadge">
                                        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                    </Style>
                                    <Style Selector="Border > Grid > TextBlock.statusError">
                                        <Setter Property="Foreground" Value="Red" />
                                    </Style>
                                </Border.Styles>
                                <Grid ColumnDefinitions="50,*,Auto">
                                    <!-- Status badge: normal (hidden when error) -->
                                    <TextBlock Grid.Column="0"
                                               Classes="statusBadge"
                                               Text="{Binding StatusText}"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding !IsError}" />

                                    <!-- Status badge: error (shown when error) -->
                                    <TextBlock Grid.Column="0"
                                               Classes="statusError"
                                               Text="{Binding StatusText}"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding IsError}" />

                                    <!-- File name -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding FileName}"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center"
                                               Margin="8,0" />

                                    <!-- Error message (if any) -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding ErrorMessage}"
                                               Foreground="Red"
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               MaxWidth="300"
                                               TextTrimming="CharacterEllipsis"
                                               IsVisible="{Binding IsError}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Expander>
    </DockPanel>
</UserControl>
