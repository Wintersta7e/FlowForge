<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FlowForge.UI.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="120"
             x:Class="FlowForge.UI.Views.ExecutionLogView"
             x:DataType="vm:ExecutionLogViewModel">

    <DockPanel Background="{DynamicResource MidnightPanel}">
        <Border DockPanel.Dock="Top"
                Padding="12,8"
                BorderBrush="{DynamicResource MidnightBorder}"
                BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Border Background="#1A3FB950" CornerRadius="10" Padding="8,2">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x2713;" Foreground="{DynamicResource MidnightSuccess}"
                                       FontWeight="Bold" FontSize="11" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Succeeded}" Foreground="{DynamicResource MidnightSuccess}"
                                       FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border Background="#1AF85149" CornerRadius="10" Padding="8,2">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x2717;" Foreground="{DynamicResource MidnightError}"
                                       FontWeight="Bold" FontSize="11" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Failed}" Foreground="{DynamicResource MidnightError}"
                                       FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border Background="#1AD29922" CornerRadius="10" Padding="8,2">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x2298;" Foreground="{DynamicResource MidnightWarning}"
                                       FontWeight="Bold" FontSize="11" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Skipped}" Foreground="{DynamicResource MidnightWarning}"
                                       FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <ProgressBar Grid.Column="1"
                             Value="{Binding Progress}"
                             Minimum="0" Maximum="100"
                             Width="120" Height="8"
                             Margin="12,0"
                             VerticalAlignment="Center"
                             IsVisible="{Binding IsRunning}" />

                <TextBlock Grid.Column="2"
                           Text="{Binding CurrentFile}"
                           MaxWidth="300"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource MidnightTextSecondary}"
                           FontSize="12"
                           IsVisible="{Binding IsRunning}" />

                <TextBlock Grid.Column="4"
                           Text="{Binding Summary}"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource MidnightTextSecondary}"
                           FontSize="12"
                           Margin="8,0"
                           IsVisible="{Binding !IsRunning}" />
            </Grid>
        </Border>

        <Expander Header="Log Entries"
                  Padding="0"
                  IsExpanded="False">
            <ScrollViewer MaxHeight="200">
                <ItemsControl ItemsSource="{Binding Entries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:FileJobLogEntryViewModel">
                            <Border Padding="12,4"
                                    BorderBrush="{DynamicResource MidnightBorder}"
                                    BorderThickness="0,0,0,1">
                                <Grid ColumnDefinitions="50,*,Auto">
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding StatusText}"
                                               FontWeight="Bold"
                                               FontSize="11"
                                               Foreground="{DynamicResource MidnightSuccess}"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding !IsError}" />
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding StatusText}"
                                               FontWeight="Bold"
                                               FontSize="11"
                                               Foreground="{DynamicResource MidnightError}"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding IsError}" />
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding FileName}"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource MidnightText}"
                                               FontSize="12"
                                               Margin="8,0" />
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding ErrorMessage}"
                                               Foreground="{DynamicResource MidnightError}"
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               MaxWidth="300"
                                               TextTrimming="CharacterEllipsis"
                                               IsVisible="{Binding IsError}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Expander>
    </DockPanel>
</UserControl>
