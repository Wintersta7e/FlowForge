<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:FlowForge.UI.ViewModels"
        xmlns:views="using:FlowForge.UI.Views"
        mc:Ignorable="d"
        d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="FlowForge.UI.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="1200" Height="700"
        MinWidth="800" MinHeight="500"
        Background="{DynamicResource MidnightBg}"
        KeyDown="OnKeyDown">

    <Grid RowDefinitions="Auto,*,Auto,180">
        <!-- Toolbar (row 0) -->
        <views:ToolbarView Grid.Row="0"
                           DataContext="{Binding}" />

        <!-- Main content area (row 1) -->
        <DockPanel Grid.Row="1">
            <!-- Node library (left) -->
            <Border DockPanel.Dock="Left"
                    Width="200"
                    Background="{DynamicResource MidnightPanel}"
                    BorderBrush="{DynamicResource MidnightBorder}"
                    BorderThickness="0,0,1,0">
                <views:NodeLibraryView DataContext="{Binding NodeLibrary}" />
            </Border>

            <!-- Properties panel (right) -->
            <Border DockPanel.Dock="Right"
                    Width="250"
                    Background="{DynamicResource MidnightPanel}"
                    BorderBrush="{DynamicResource MidnightBorder}"
                    BorderThickness="1,0,0,0">
                <views:PropertiesView DataContext="{Binding Properties}" />
            </Border>

            <!-- Canvas (center fill) -->
            <views:CanvasView DataContext="{Binding Editor}" />
        </DockPanel>

        <!-- GridSplitter (row 2) -->
        <GridSplitter Grid.Row="2"
                      Height="4"
                      HorizontalAlignment="Stretch"
                      Background="{DynamicResource MidnightBorder}"
                      ResizeDirection="Rows" />

        <!-- Output panel (row 3) -->
        <views:ExecutionLogView Grid.Row="3"
                                MinHeight="28"
                                MaxHeight="400"
                                DataContext="{Binding ExecutionLog}" />
    </Grid>
</Window>
